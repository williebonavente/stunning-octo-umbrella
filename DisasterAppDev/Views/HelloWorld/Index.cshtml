@model DisasterAppDev.Models.HelloWorldViewModel
@{
	ViewData["Title"] = "HelloWorld Page";
	ViewData["Title"] = "TestForm";
}

<h1 class="text-3xl font-bold text-blue-500">Hello, World</h1>
<p class="text-blue-700">Welcome to the HelloWorld Index view.</p>


<h1 class="text-3xl font-bold text-blue-500">Test Model Table</h1>

<table class="table-auto border-collapse border border-gray-400 w-full text-left">
	<thead>
		<tr class="bg-gray-200">
			<th class="border border-gray-400 px-4 py-2">ID</th>
			<th class="border border-gray-400 px-4 py-2">Name</th>
			<th class="border border-gray-400 px-4 py-2">Age</th>
			<th class="border border-gray-400 px-4 py-2">Description</th>
		</tr>
	</thead>

	<tbody>
		@foreach (var item in Model.TestModels)
		{
			<tr>
			<td class="border border-gray-400 px-4 py-2">@item.Id</td>
			<td class="border border-gray-400 px-4 py-2">@item.Name</td>
			<td class="border border-gray-400 px-4 py-2">@item.Age</td>
			<td class="border border-gray-400 px-4 py-2">@item.Description</td>
			</tr>
		}
	</tbody>
</table>

